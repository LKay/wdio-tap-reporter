{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["dom", "es6", "scripthost"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
